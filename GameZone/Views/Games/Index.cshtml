@model IEnumerable<Game>
@{
    ViewData["Title"] = "Games";
}

    <a  class="btn btn-info my-2" asp-controller="Games" asp-action="create">
        <i class="bi bi-plus-circle-dotted"></i>
        Add a new game 
    </a>

<div class="my-2">


    @if (!Model.Any())
    {
        <div class="alert alert-dismissible alert-warning">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <h4 class="alert-heading">Empty !</h4>
            <p class="mb-0">Sorry No Games Added Yet !</p>

        </div>
    }
   
        <div class="">
           <table class="border table-bordered border-primary w-100">
               <tbody>
                    @foreach (var game in Model)
                    {

                       <tr class="border-1 border-success w-100">
                           <td class=" d-flex justify-content-between ">
                              <div class=" d-flex justify-content-between">
                                <div class="">
                                    <img alt="@game.Name" src="@($"{SettingsFile.ImagePath}/{game.Cover}")" style="width:100px ;height:100px ;" />

                                </div>

                                <div class="d-flex flex-column justify-content-center mx-2">
                                    <h4 class="text-light">@game.Name</h4>
                                    <h5 class="">@game.Category.Name</h5>

                                </div>
                               </div>
                               <div>
                                    <a class="btn btn-info my-2 rounded-0" asp-controller="Games" asp-action="Edit" asp-route-id="@game.Id">
                                       
                                    <i class="bi bi-pencil-square"></i>
                                        Edit
                                    </a>

                                    <a href="javascript:;"  class="btn btn-danger my-2 rounded-0 js-delete" data-id="@game.Id" >
                                        <i class="bi bi-trash"></i>
                                        Delete
                                    </a>
                               </div>
                           </td>
                       </tr>
                    }
               </tbody>
           </table>



        </div>
   



</div>
@section Scripts{
    <script src="~/js/gamesoptions.js" asp-append-version="true"></script>
}



