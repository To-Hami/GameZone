@model EditGameFormViewModel
@{
    ViewData["Title"] = "Edit";
}


<h6 class="display-6 my-2">
    <i class="bi bi-pencil-square"></i>
     Edit game
</h6>

<form asp-controller="Games" asp-action="Edit" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6 overflow-hidden  ">

            <div class="form-group ">
                <label asp-for="Name" class="col-sm-2 col-form-label text-white"></label>
                <input asp-for="Name" type="text" class="form-control text-black" placeholder="Enter Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


            <div class="form-group ">
                <label asp-for="CategoryId" class=" col-form-label text-white"></label>
                <select class="form-select" asp-for="CategoryId" asp-items="Model.Categories"
                        data-placeholder="Select Category" data-minimum-results-for-search="Infinity">
                    <option value="" ></option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>


            <div class="form-group ">
                <label asp-for="SelectedDevices" class=" col-form-label text-white"></label>
                <select class="form-select" asp-for="SelectedDevices" asp-items="Model.Devices"
                        data-placeholder="Select Devices">
                    <option value="" ></option>
                </select>
                <span asp-validation-for="SelectedDevices" class="text-danger"></span>
            </div>



            <div class="form-group ">
                <label asp-for="Description" class=" col-form-label text-white"></label>
                <textarea asp-for="Description" class=" form-control" placeholder="Enter Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


             <div class="form-group ">
                <label asp-for="Cover" class="col-sm-2 col-form-label text-white"></label>
                <input asp-for="Cover" type="file" class="form-control text-black"
                       data-rule-extension="@SettingsFile.AllowedExtensions.Replace(".",String.Empty)" 
                        data-msg-extension=" Not Allowed Extensions " 
                       data-rule-filesize="@SettingsFile.MaxFileSizeInByte"
                       data-msg-filesize="You file is over than @SettingsFile.MaxFileSizeInMG MB please use small file">
                <span asp-validation-for="Cover" class="text-danger d-block"></span>
                <small id="emailHelp" class="form-text text-muted">Only Files Allowed are .jpg , .png , .jpeg with max 1MG size  .</small>
            </div>


            <button type="submit" class="btn btn-success my-2"> Update</button>
        
        </div>
        <div class="col-md-6 overflow-hidden d-flex justify-content-center align-item-center ">
            <img src="@($"{SettingsFile.ImagePath}/{Model.CurrentCover}")" alt="Cover" class="image_preview  mt-3" />
        </div>
    </div>
   
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/filesizevlaidator.js" asp-append-version="true"></script>
    <script src="~/js/formvalidation.js" asp-append-version="true"></script>
   
}
