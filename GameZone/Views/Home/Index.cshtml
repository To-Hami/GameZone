@model IEnumerable<Game>
@{
    ViewData["Title"] = "Index";
}

<div class="my-3">
    @if (!Model.Any())
    {
        <div class="alert alert-dismissible alert-warning">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <h4 class="alert-heading">Empty !</h4>
            <p class="mb-0">Sorry No Games Added Yet !</p>

        </div>
    }




    <div class="row my-5">
        @foreach (var game in Model)
        {
            <a class="col-lg-4 col-md-6 col-sm-12 text-decoration-none" asp-controller="Games" asp-action="Details" asp-route-id="@game.Id">
                <div class="card border-success mb-3 overflow-hidden" style="max-width: 20rem;">
                    <div class="card-body" style="background-image:url(@($"{SettingsFile.ImagePath}/{game.Cover}")) ; background-size:cover ; background-position:center ; height:350px ; border-radius:10px">
                        <div class="h-100">

                            <span class="badge rounded-pill bg-dark">@game.Category?.Name</span>

                        </div>
                    </div>

                    <div class="card-footer text-white d-flex justify-content-between align-items-center">

                        <h5>@game.Name</h5>
                        <div>
                            @foreach (var gameDevice in game.Devices)
                            {
                                <i class="@gameDevice.Device.Icon"></i>
                            }
                        </div>
                    </div>
                </div>
            </a>


        }
    </div>





</div>


